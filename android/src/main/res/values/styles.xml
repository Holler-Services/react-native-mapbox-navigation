<resources>
    <style name="MapboxCustomManeuverTurnIconStyle" parent="MapboxStyleTurnIconManeuver">
        <item name="maneuverTurnIconColor">#FFFFFF</item>
        <item name="maneuverTurnIconShadowColor">#303030</item>
    </style>

    <style name="MapboxCustomManeuverStyle" parent="MapboxStyleManeuverView">
        <item name="maneuverViewBackgroundColor">#303030</item>
        <item name="subManeuverViewBackgroundColor">#707070</item>
        <item name="upcomingManeuverViewBackgroundColor">#707070</item>
        <item name="maneuverViewIconStyle">@style/MapboxCustomManeuverTurnIconStyle</item>
        <item name="laneGuidanceManeuverIconStyle">@style/MapboxCustomManeuverTurnIconStyle</item>
    </style>

    <style name="PrimaryManeuverTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="SecondaryManeuverTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="SubManeuverTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="StepDistanceTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="UpcomingPrimaryManeuverTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="UpcomingSecondaryManeuverTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="UpcomingManeuverStepDistanceTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="StatusViewTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>